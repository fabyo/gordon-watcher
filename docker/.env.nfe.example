# ═══════════════════════════════════════════════════════════
#  GORDON WATCHER - NF-e ENVIRONMENT VARIABLES
# ═══════════════════════════════════════════════════════════

# Application
ENVIRONMENT=production
GORDON_VERSION=latest
LOG_LEVEL=info

# PostgreSQL (Banco de dados das NF-es)
POSTGRES_DB=nfe_database
POSTGRES_USER=nfe_user
POSTGRES_PASSWORD=nfe_password_123
POSTGRES_PORT=5432

# RabbitMQ (Fila de mensagens)
RABBITMQ_USER=nfe_user
RABBITMQ_PASSWORD=SenhaBemForte123!
RABBITMQ_VHOST=nfe_vhost
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Redis (Cache e estado)
REDIS_PASSWORD=redis_nfe_pass
REDIS_PORT=6379

# Prometheus (Métricas)
PROMETHEUS_PORT=9090

# Grafana (Dashboards)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001

# Jaeger (Tracing)
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Gordon Watcher
WATCHER_HEALTH_PORT=8081
WATCHER_METRICS_PORT=9100
MAX_WORKERS=20
MAX_FILES_PER_SECOND=150

# Gordon Worker (NF-e Processor)
WORKER_HEALTH_PORT=8082
WORKER_METRICS_PORT=9101
WORKER_REPLICAS=2

# SEFAZ (Validação NF-e)
SEFAZ_UF=SP
SEFAZ_AMBIENTE=homologacao  # homologacao ou producao

# PgAdmin (Opcional)
PGADMIN_EMAIL=admin@gordon.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
